extends layout

block content
  if(userLogin)
    p You're already registered
  else
    main.register-content
      h1.register-message Welcome!
      form.register-form(action="/register" method="POST")
        .input-field 
          i.material-icons.prefix account_circle
          input#icon_prefix.login.text(type="text" name="sign-up-login")
          label.input-field-label(for="icon_prefix") Login
        .input-field 
          i.material-icons.prefix lock_outline
          input#icon_prefix.pass.text(type="password" name="sign-up-pass")
          label.input-field-label(for="icon_prefix") Password
        .input-field 
          i.material-icons.prefix loop
          input#icon_prefix.rePass.text(type="password" name="sign-up-rePass" value=rePass)
          label.input-field-label(for="icon_prefix") Repeat the password
        button.waves-effect.black.btn.submit Sign up
        //- b Username
        //- input.login.text(type="text" placeholder="Enter Username" name="sign-up-login" value=login style="margin-bottom: 5px")
        //- b Password
        //- input.pass.text(type="password" placeholder="Enter Password" name="sign-up-pass" value=pass)
        //- input.rePass.text(type="password" placeholder="Repeat your password" name="sign-up-rePass" value=rePass)
        //- input.submit(type="submit" value="Register" style="margin-top: 10px")
      if(err)
        p.error-message #{err}
      