doctype html
html(lang="en")
  head
    title Gallery
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/stylesheets/layout.css")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
    link(href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet")
    script(src="https://code.jquery.com/jquery-3.5.1.min.js")
  body
    header.header
      .full-img-pic-layout.hidden
        img.arrow-right(src="/images/site-images/arrow-right.png")
        img.arrow-left(src="/images/site-images/arrow-left.png")

      a.header-link.header__index-link(href="/") Home
      if(userLogin)
        span.header-link User profile:  #{userLogin} 
        a.header-link(href="/upload") Upload images
        a.header-link(href="/logout") Logout
      else
        section.sign-in-wrapper
          a.header-link(href="/register") Sign up
          a.header-link(href="/login") Sign in
    block content

  script(src="/javascripts/gallery.js")
  script(src="/javascripts/custom-upload-file.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js")
    

